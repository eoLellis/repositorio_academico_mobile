<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/darkPurple">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projeto Integrador - Mobile!"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atividades:"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>

    <!-- Atividade 1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atividade 1"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar Diagrama de Classes"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição: Desenvolver um diagrama de classes para o projeto acadêmico."
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <!-- Atividade 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atividade 2"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trabalho acadêmico Mobile"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição: Criar um aplicativo mobile utilizando Java e Android Studio."
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <!-- Adicione mais atividades conforme necessário -->
</LinearLayout>
